<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uploadPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nofiles_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="NO FILES FOUND"
        android:visibility="invisible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/newFolderBtn"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_above="@+id/nofiles_textview"
        android:layout_below="@+id/recycler_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="317dp"
        android:layout_marginTop="-192dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="298dp"
        android:text="New Folder" />

    <Button
        android:id="@+id/addPdfBtn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/newFolderBtn"
        android:layout_alignTop="@+id/newFolderBtn"
        android:layout_alignBottom="@+id/newFolderBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="-63dp"
        android:text="Add PDF" />

    <Button
        android:id="@+id/addPhotoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/addPdfBtn"
        android:layout_alignTop="@+id/addPdfBtn"
        android:layout_alignBottom="@+id/addPdfBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-57dp"
        android:text="Add Images" />

</RelativeLayout>