<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MIddlepage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="411dp"
        android:layout_height="320dp"
        android:background="@color/teal_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="263dp"
            android:layout_height="145dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/learn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.89"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="129dp"
            android:layout_height="129dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:text="Learn\nObserve\nExplore"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="359dp"
        android:layout_height="390dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="@dimen/_35sdp"
        android:layout_marginLeft="-15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/question"
                android:layout_width="341dp"
                android:layout_height="103dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/img"
                android:text="question"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_conversion_absoluteHeight="93dp"
                tools:layout_conversion_absoluteWidth="375dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/others"
                android:layout_width="341dp"
                android:layout_height="95dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="36dp"
                android:drawableLeft="@drawable/img_3"
                android:text="others"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/slides"
                tools:layout_conversion_absoluteHeight="96dp"
                tools:layout_conversion_absoluteWidth="375dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/slides"
                android:layout_width="341dp"
                android:layout_height="105dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="136dp"
                android:drawableLeft="@drawable/img_2"
                android:text="Slides"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_conversion_absoluteHeight="88dp"
                tools:layout_conversion_absoluteWidth="375dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uni_back_btn"
        android:layout_width="265dp"
        android:layout_height="70dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/follow_btn"
        android:backgroundTint="@color/teal_700"
        android:drawableLeft="@drawable/ic_arrow"
        android:text="GO BACK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />
</androidx.constraintlayout.widget.ConstraintLayout>