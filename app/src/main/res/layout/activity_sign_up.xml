<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="-6dp"
    tools:layout_editor_absoluteY="48dp">

    <EditText
        android:id="@+id/sup_name"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="11dp"
        android:ems="10"
        android:hint="Full name"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sup_email"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="11dp"
        android:ems="10"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sup_mobile"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="11dp"
        android:ems="10"
        android:hint="Mobile no"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sup_pass"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="436dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sup_pass_cnfrm"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="508dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:hint="Confirm password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sup_button"
        android:layout_width="124dp"
        android:layout_height="53dp"
        android:layout_marginTop="596dp"
        android:background="#2F9133"
        android:gravity="center|center_horizontal"
        android:text="Sign Up"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_page_back"
        android:layout_width="73dp"
        android:layout_height="34dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="672dp"
        android:layout_marginEnd="76dp"
        android:gravity="center|center_horizontal"
        android:text="Log In"
        android:textColor="#4591CD"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="202dp"
        android:layout_height="34dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="672dp"
        android:gravity="center|center_horizontal"
        android:text="Already have an account?"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/show_sup_pass2"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:layout_marginTop="524dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eye_show" />

    <ImageView
        android:id="@+id/show_sup_pass"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:layout_marginTop="452dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eye_show" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="186dp"
        android:layout_height="197dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="94dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/signup_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>